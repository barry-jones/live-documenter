<UserControl x:Class="TheBoxSoftware.DeveloperSuite.LiveDocumenter.Controls.WelcomePageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#FFEFEEE8">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.32*" />
            <ColumnDefinition Width="0.68*" />
        </Grid.ColumnDefinitions>
        
        <!-- Welcome page title -->
        <Border Grid.Row="0" Padding="5,5,5,6" Background="#FF212121" Margin="0" Grid.ColumnSpan="2" Height="38.27" VerticalAlignment="Top">
			<TextBlock Foreground="#FFA67D3D" FontFamily="Georgia" FontSize="24">Welcome to the Live Documenter</TextBlock>
		</Border>
        
        <!-- Previous items list -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0.08,0">
            <TextBlock>Previose Projects</TextBlock>
            <ListBox>
                <ListItem />
            </ListBox>
        </StackPanel>
		
		<StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="-0.08,0,0,0"/>
    </Grid>
</UserControl>
